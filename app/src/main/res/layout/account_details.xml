<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AccountDetails">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="455dp"
        app:cardCornerRadius="10dp"
        android:transitionName="cardAnim"
        app:cardBackgroundColor="#DEEAFB"
        android:layout_marginHorizontal="5dp"
        app:cardElevation="20dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_back_button"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Name Of the Customer"
                android:layout_centerHorizontal="true"
                android:textColor="#611FFF"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/alegreya_sc"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/account_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Acc/No :  12036547893"
                android:layout_below="@+id/back_btn"
                android:textColor="#611FFF"
                android:layout_marginTop="20dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/ifscCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="IFSC Code :  SPRK123456"
                android:layout_below="@+id/account_no"
                android:textColor="#611FFF"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/phoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Phone No. :  9632587415"
                android:layout_below="@+id/ifscCode"
                android:textColor="#611FFF"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Email :  abc@example.com"
                android:layout_below="@+id/phoneNo"
                android:textColor="#611FFF"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Address :  Delhi"
                android:layout_below="@+id/email"
                android:textColor="#611FFF"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rs. 10,000"
                android:layout_centerHorizontal="true"
                android:textColor="#00C853"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alegreya_sc"
                android:layout_below="@id/address"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <Button
                android:id="@+id/btn_transfer"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@id/balance"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="15dp"
                android:textColor="@color/white"
                android:background="#611FFF"
                android:text="Transfer"
                android:textAllCaps="false"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/viewTransaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_transactions"
                android:layout_below="@+id/btn_transfer"
                android:textColor="#6A1B9A"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/alegreya_sc"
                android:textSize="18sp"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>